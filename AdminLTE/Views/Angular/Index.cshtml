<div class="content-wrapper" ng-controller="productController">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Angular Js
            <small>it all starts here</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Examples</a></li>
            <li class="active">Angular Js</li>
        </ol>
    </section>
    <section style="padding: 15px;">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Create New Product</h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                    <button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body">
                <form name="userForm" ng-submit="" novalidate>
                  <div class="row">
                        <div class="col-xs-offset-1 col-xs-3">
                            <input type="text" name="code" class="form-control" ng-model="product.ProductCode" placeholder="Code" ng-change="submitForm(userForm.$valid)" required>
                            <p ng-show="userForm.code.$invalid && !userForm.code.$pristine" class="help-block"> Code is required.</p>
                        </div>
                        <div class="col-xs-3">
                            <input type="text" name="name" class="form-control" ng-model="product.Productname" placeholder="Name" ng-change="submitForm(userForm.$valid)" required>
                            <p ng-show="userForm.name.$invalid && !userForm.name.$pristine" class="help-block"> Name is required.</p>
                        </div>
                        <div class="col-xs-3">
                            <input type="text" name="price" class="form-control" ng-model="product.Price" placeholder="Price" ng-change="submitForm(userForm.$valid)" required>
                            <p ng-show="userForm.price.$invalid && !userForm.price.$pristine" class="help-block"> Price is required.</p>
                        </div>
                        <div class="col-xs-1">
                            <button type="submit" ng-disabled="dis" class="btn btn-block btn-success" ng-click="addProduct(product)">Save</button>
                        </div>
                    </div>
                 </form>
              </div>
            <!-- /.box-body -->
        </div>
    </section>

    <section class="content">

        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Products</h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                    <button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body">
                <table style="width:100%">
                    <tr>
                        <th>Id</th>
                        <th>ProductCode</th>
                        <th>ProductName</th>
                        <th>Price</th>
                    </tr>
                    <tr ng-repeat="product in products">
                        <td>{{product.Id}}</td>
                        <td>{{product.ProductCode}}</td>
                        <td>{{product.Productname}}</td>
                        <td>{{product.Price}}</td>
                    </tr>

                </table>

            </div><!-- /.box-body -->
            <div class="box-footer">
                Footer
            </div><!-- /.box-footer-->
        </div><!-- /.box -->

    </section><!-- /.content -->
</div><!-- /.content-wrapper -->


